@model TicketMasterMVC.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Delete Ticket</h2>
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Ticket</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">Event Name</dt>
                    <dd class="col-sm-10">@Model.EventName</dd>
                    <dt class="col-sm-2">Event Date</dt>
                    <dd class="col-sm-10">@Model.EventDate</dd>
                    <dt class="col-sm-2">Price</dt>
                    <dd class="col-sm-10">@Model.Price</dd>
                    <dt class="col-sm-2">Location</dt>
                    <dd class="col-sm-10">@Model.Location</dd>
                    <dt class="col-sm-2">Artist Name</dt>
                    <dd class="col-sm-10">@Model.ArtistName</dd>
                    <dt class="col-sm-2">Cover Picture</dt>
                    <dd class="col-sm-10"><img src="@Model.CoverPictureUrl" class="img-fluid" /></dd>
                </dl>

                <form asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
                
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a> <!-- Use ml-2 for margin-left -->
            </div>
            <span><br/> </span> 
            <span><br /> </span>
        </div>
    </div>
</div>
